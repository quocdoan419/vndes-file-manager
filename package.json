{
  "name": "vndes-file-manager",
  "displayName": "FTP & SSH Manager",
  "description": "Manage multiple FTP and SFTP (SSH) connections securely and perform file operations from VS Code",
  "version": "0.2.1",
  "publisher": "vndesnet",
    "icon": "resources/logo.png",
  "engines": {
    "vscode": "^1.60.0"
  },
  "repository": {
		"type": "git",
		"url": "https://github.com/quocdoan419/vndes-file-manager.git"
	},
  "categories": [
		"Programming Languages",
		"Keymaps"
	],
	"keywords": [
		"FTP",
		"SFTP",
		"File manager",
		"File",
		"Redis"
	],
  "activationEvents": [
   "onCommand:ftpSsh.addConnection",
   "onCommand:ftpSsh.editConnection",
    "onCommand:ftpSsh.removeConnection",
    "onCommand:ftpSsh.fileInfo",
    "onCommand:ftpSsh.uploadFile",
    "onCommand:ftpSsh.downloadFile",
    "onCommand:ftpSsh.uploadFolder",
    "onCommand:ftpSsh.rename",
    "onCommand:ftpSsh.delete",
     "onCommand:ftpSsh.duplicateFile",
    "onCommand:ftpSsh.chmod",
    "onCommand:ftpSsh.move",
    "onCommand:ftpSsh.openFile",
    "onCommand:ftpSsh.setSortMode",
    "onCommand:ftpSsh.compressFolder",
    "onCommand:ftpSsh.openSshTerminal"
  ],
  "main": "./out/extension.js",
  "viewsWelcome": [
  {
    "view": "ftpSshView",
    "contents": "Right-click the root to sort files by name, type, or modified date."
  }
],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ftpSshContainer",
          "title": "FTP/SFTP",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "ftpSshContainer": [
        {
          "id": "ftpSshView",
          "name": "SERVICE"
        }
      ]
    },
    "commands": [
      {
        "command": "ftpSsh.addConnection",
        "title": "Add",
        "icon": "$(plus)"
      },
      {
        "command": "ftpSsh.editConnection",
        "title": "Edit",
        "icon": "$(edit)"
      },
      {
        "command": "ftpSsh.removeConnection",
        "title": "Remove",
        "icon": "$(trash)"
      },
      {
        "command": "ftpSsh.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },{
        "command": "ftpSsh.fileInfo",
        "title": "View Info"
      },
      {
        "command": "ftpSsh.downloadFile",
        "title": "Download File"
      },{
        "command": "ftpSsh.uploadFolder",
        "title": "Upload Folder"
      },
      {
        "command": "ftpSsh.uploadFile",
        "title": "Upload Files"
      },
      {
        "command": "ftpSsh.addFile",
        "title": "Add File"
      },
      {
        "command": "ftpSsh.addFolder",
        "title": "Add Folder"
      },
      {
        "command": "ftpSsh.move",
        "title": "Move to..."
      },
      {
        "command": "ftpSsh.rename",
        "title": "Rename"
      },
      {
        "command": "ftpSsh.delete",
        "title": "Delete"
      },
      {
        "command": "ftpSsh.duplicateFile",
        "title": "Duplicate"
      },
      {
        "command": "ftpSsh.paste",
        "title": "FTP/SFTP: Paste"
      },
      {
        "command": "ftpSsh.chmod",
        "title": "Permissions"
      },
      {
        "command": "ftpSsh.openRemote",
        "title": "FTP/SFTP: Open Remote File"
      },
      { "command": "ftpSsh.openFile",
       "title": "Open File" 
        },
        {
        "command": "ftpSsh.setSortMode",
        "title": "Sort",
        "icon": "$(beaker)"
      },{
        "command": "ftpSsh.downloadFolder",
        "title": "Download Folder"
      },{
        "command": "ftpSsh.openSshTerminal",
        "title": "Open Terminal",
        "icon" :"$(repl)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ftpSsh.refresh",
          "when": "view == ftpSshView",
          "group": "navigation",
          "icon": "$(refresh)"
        },
        {
          "command": "ftpSsh.addConnection",
          "when": "view == ftpSshView",
          "group": "navigation"
        },{
        "command": "ftpSsh.setSortMode",
        "when": "view == ftpSshView",
        "group": "navigation"
      }
      ],
      "view/item/context": [
       {
		"command": "ftpSsh.removeConnection",
		"when": "view == ftpSshView && (viewItem == connection || viewItem == sftpConnection)",
		"group": "inline@2"
		},
        {
		"command": "ftpSsh.editConnection",
		"when": "view == ftpSshView &&  (viewItem == connection || viewItem == sftpConnection)",
		"group": "inline@0"
		},
        {
		"command": "ftpSsh.refresh",
		"when": "view == ftpSshView &&  (viewItem == connection || viewItem == sftpConnection)",
		"group": "inline@1"
		},{
		"command": "ftpSsh.openSshTerminal",
		"when": "view == ftpSshView && viewItem == sftpConnection",
		"group": "inline@1"
		},
        {
          "command": "ftpSsh.addFile",
          "when": "view == ftpSshView && viewItem == folder"
        },
        {
          "command": "ftpSsh.addFolder",
          "when": "view == ftpSshView && viewItem == folder"
        },
        {
          "command": "ftpSsh.rename",
          "when": "view == ftpSshView && (viewItem == folder || viewItem == file)"
        },
        {
          "command": "ftpSsh.delete",
          "when": "view == ftpSshView && (viewItem == folder || viewItem == file)"
        },
        {
          "command": "ftpSsh.uploadFile",
          "when": "view == ftpSshView && viewItem == folder"
        },
         {
          "command": "ftpSsh.uploadFolder",
          "when": "view == ftpSshView && viewItem == folder"
        },  
        {
          "command": "ftpSsh.copyFile",
          "when": "view == ftpSshView && viewItem == file"
        },
        {
          "command": "ftpSsh.chmod",
          "when": "view == ftpSshView && viewItem =~ /file|folder/"
        }, { 
            "command": "ftpSsh.openFile",
             "when": "view == ftpSshView && viewItem == file" 
        },{
            "command": "ftpSsh.downloadFile",
             "when": "view == ftpSshView && viewItem == file" 
        },{
            "command": "ftpSsh.downloadFolder",
            "when": "view == ftpSshView && viewItem == folder"
        },{
            "command": "ftpSsh.move",
            "when": "view == ftpSshView && (viewItem == folder || viewItem == file)"
        }

      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^14.0.0",
    "@types/ssh2-sftp-client": "^9.0.5",
    "@types/vscode": "^1.60.0",
    "typescript": "^4.0.0",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "basic-ftp": "^4.6.2",
    "ssh2-sftp-client": "^8.0.0",
    "uuid": "^9.0.0"
  }
}
